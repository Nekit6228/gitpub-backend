      "name": "Auth",
      "description": "Auth operations."
    },
    {
      "name": "Weeks",
      "description": "Weeks operations"
    }
  ],
  "paths": {
    "/api/auth/register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Register user",
        "operationId": "registerUser",
        "description": "Register a new user",
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "name",
                  "email",
                  "password"
                ],
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "John Doe"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "john@example.com"
                  },
                  "password": {
                    "type": "string",
                    "minLength": 8,
                    "example": "StrongPass123!"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User successfully registered",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 201
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully registered a user!"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "example": "64adf5e8b3f9a27f9c11d3b4"
                        },
                        "name": {
                          "type": "string",
                          "example": "Igor"
                        },
                        "email": {
                          "type": "string",
                          "format": "email",
                          "example": "igor@example.com"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400"
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Login user",
        "operationId": "loginUser",
        "description": "Login user with email and password",
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "email",
                  "password"
                ],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "john@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "StrongPass123!"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User successfully logged in",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully logged in an user!"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "accessToken": {
                          "type": "string",
                          "example": "eyJhbGciOiJIUzI1NiIsInR..."
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    },
    "/api/auth/logout": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Logout user",
        "operationId": "logoutUser",
        "description": "Logout user and clear cookies",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "204": {
            "description": "Successfully logged out (No content)"
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    },
    "/api/weeks/current": {
      "get": {
        "tags": [
          "Weeks"
        ],
        "summary": "Отримати поточний тиждень (приватна версія)",
        "operationId": "getCurrentWeekData",
        "description": "Повертає дані про поточний тиждень вагітності на основі переданої дати пологів (`dueDate`). Ендпоінт вимагає авторизації.\n",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "dueDate",
            "in": "query",
            "required": true,
            "description": "Дата передбачуваних пологів (формат YYYY-MM-DD)",
            "schema": {
              "type": "string",
              "format": "date",
              "example": "2025-12-19"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Успішна відповідь",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "week": {
                      "type": "integer",
                      "example": 28
                    },
                    "daysToDue": {
                      "type": "integer",
                      "example": 89
                    },
                    "pack": {
                      "$ref": "#/components/schemas/Pack"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400"
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "500": {
            "$ref": "#/components/responses/500"
          }
        }
      }
    },
    "/api/weeks/current/public": {
      "get": {
        "tags": [
          "Weeks"
        ],
        "summary": "Отримати поточний тиждень (публічна версія)",
        "operationId": "getCurrentWeekDataPublic",
        "description": "Повертає дані про поточний тиждень вагітності, включно з інформацією про розвиток дитини та відчуття мами. Публічний ендпоінт.\n",
        "security": [],
        "responses": {
          "200": {
            "description": "Успішна відповідь",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "week": {
                      "type": "integer",
                      "example": 5
                    },
                    "daysToDue": {
                      "type": "integer",
                      "example": 252
                    },
                    "pack": {
                      "$ref": "#/components/schemas/Pack"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    },
    "/api/weeks/{weekNumber}": {
      "get": {
        "tags": [
          "Weeks"
        ],
        "summary": "Отримати дані по конкретному тижню",
        "operationId": "getWeekMomBabyData",
        "description": "Повертає детальну інформацію про розвиток дитини та стан мами для конкретного тижня вагітності.\n",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "weekNumber",
            "in": "path",
            "required": true,
            "description": "Номер тижня (1–40)",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 40,
              "example": 12
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Успішна відповідь",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "week": {
                      "type": "integer",
                      "example": 12
                    },
                    "baby": {
                      "$ref": "#/components/schemas/Baby"
                    },
                    "mom": {
                      "$ref": "#/components/schemas/Mom"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400"
          },
          "404": {
            "$ref": "#/components/responses/404"
          },
          "500": {
            "$ref": "#/components/responses/500"
          }
        }
      }
    },
    "/api/weeks/{weekNumber}/mom": {
      "get": {
        "tags": [
          "Weeks"
        ],
        "summary": "Отримати дані про маму для конкретного тижня",
        "operationId": "getWeekMomData",
        "description": "Повертає інформацію про стан мами та поради для певного тижня вагітності.\n",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "weekNumber",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Номер тижня вагітності"
          }
        ],
        "responses": {
          "200": {
            "description": "Дані для мами",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "week": {
                      "type": "integer",
                      "example": 12
                    },
                    "mom": {
                      "$ref": "#/components/schemas/mom"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    },
    "/api/weeks/{weekNumber}/baby": {
      "get": {
        "tags": [
          "Weeks"
        ],
        "summary": "Отримати дані про дитину для конкретного тижня",
        "operationId": "getWeekBabyData",
        "description": "Повертає інформацію про розвиток дитини для певного тижня вагітності.\n",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "weekNumber",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Номер тижня вагітності"
          }
        ],
        "responses": {
          "200": {
            "description": "Дані для дитини",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "week": {
                      "type": "integer",
                      "example": 12
                    },
                    "baby": {
                      "$ref": "#/components/schemas/baby"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "responses": {
      "400": {
        "description": "Bad Request",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 400
                },
                "message": {
                  "type": "string",
                  "example": "Bad request. Validation failed."
                }
              }
            }
          }
        }
      },
      "401": {
        "description": "Unauthorized error",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message",
                "data"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 401
                },
                "message": {
                  "type": "string",
                  "example": "Unauthorized"
                },
                "data": {
                  "type": "object",
                  "required": [
                    "message"
                  ],
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Access token expired"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "404": {
        "description": "Contact not found",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 404
                },
                "message": {
                  "type": "string",
                  "example": "Contact  not found"
                }
              }
            }
          }
        }
      },
      "500": {
        "description": "Invalid request payload",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 500
                },
                "message": {
                  "type": "string",
                  "example": "Validation failed phoneNumber, contactType, name is required"
                }
              }
            }
          }
        }
      }
    },
    "schemas": {
      "Baby": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "6895ce04a5c677999ed2af29"
          },
          "analogy": {
            "type": "string",
            "example": "Насінина кунжуту"
          },
          "weekNumber": {
            "type": "integer",
            "example": 5
          },
          "babySize": {
            "type": "number",
            "example": 0.3
          },
          "babyWeight": {
            "type": "number",
            "example": 0.2
          },
          "image": {
            "type": "string",
            "format": "uri",
            "example": "https://ftp.goit.study/img/lehlehka/6895ce04a5c677999ed2af29.webp"
          },
          "babyActivity": {
            "type": "string",
            "example": "Найголовніша подія тижня — починає битися крихітне серце!"
          },
          "babyDevelopment": {
            "type": "string"
          },
          "interestingFact": {
            "type": "string"
          },
          "momDailyTips": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "Mom": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "6895cb58a5c677999ed2aefd"
          },
          "weekNumber": {
            "type": "integer",
            "example": 5
          },
          "feelings": {
            "type": "object",
            "properties": {
              "states": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "example": [
                  "Нудота",
                  "Часте сечовипускання",
                  "Емоційні гойдалки"
                ]
              },
              "sensationDescr": {
                "type": "string"
              }
            }
          },
          "comfortTips": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "category": {
                  "type": "string"
                },
                "tip": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "Pack": {
        "type": "object",
        "properties": {
          "week": {
            "type": "integer",
            "example": 5
          },
          "baby": {
            "$ref": "#/components/schemas/Baby"
          },
          "mom": {
            "$ref": "#/components/schemas/Mom"
          }
        }
      },
      "mom": {
        "type": "object",
        "properties": {
